<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <!-- Load the toolbar here -->
    <include
        layout="@layout/custom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/giorno_corrente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:text="giorno"
        android:layout_gravity="center"
        android:textSize="14sp"
        android:textStyle="bold|italic"/>

    <LinearLayout
        android:id="@+id/linearLayoutSaldo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_saldo_title_home_page"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Saldo:"
            android:textSize="24sp"
            android:textStyle="bold|italic"
            app:fontFamily="@font/cherry_swash" />

        <TextView
            android:id="@+id/tv_saldo_value_home_page"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:text="importo"
            android:textSize="24sp"
            android:textStyle="bold|italic"
            app:fontFamily="@font/cherry_swash" />


        <TextView
            android:id="@+id/tv_euro_image"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:text="€"
            android:textSize="24sp"
            android:textStyle="bold|italic"
            app:fontFamily="@font/cherry_swash" />

    </LinearLayout>


    <!--ENTRATE / USCITE -->
    <LinearLayout
        android:id="@+id/linearLayoutEntrateUscite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <!--ENTRATE  -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_entrate_title_home_page"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Entrate:"
                android:textSize="24sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/tv_entrate_value_home_page"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="10000"
                android:textSize="24sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/tv_euro_image_entrate"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="€"
                android:textSize="24sp"
                android:textStyle="bold|italic"
                app:fontFamily="@font/cherry_swash" />

        </LinearLayout>

        <View
            android:layout_width="10dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!--USCITE -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_uscite_title_home_page"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Uscite:"
                android:textSize="24sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/tv_uscite_value_home_page"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="10000"
                android:textSize="24sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/tv_euro_image_uscite"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="€"
                android:textSize="24sp"
                android:textStyle="bold|italic"
                app:fontFamily="@font/cherry_swash" />
        </LinearLayout>
    </LinearLayout>
            <!--END-->
        <!--ENTRATE / USCITE -->

    <TextView
        android:id="@+id/title_lista_categorie_spese"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:text="Categorie Spese"
        android:layout_gravity="center"
        android:textSize="24sp"
        android:textStyle="bold|italic"/>

    <GridView
        android:id="@+id/gridViewSpese"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/gridview_style"
        android:horizontalSpacing="0dp"
        android:numColumns="4"
        android:scrollbars="vertical"
        android:verticalSpacing="0dp" />


</LinearLayout>